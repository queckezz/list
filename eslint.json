{
  "env": {
    "node": true
  },

  "rules": {
    "no-use-before-define": 0,
    "no-undef": 2,
    "strict": 0,
    
    "valid-jsdoc": [2, {
      "prefer": {
        "return": "returns"
      }
    }],
    
    "valid-typeof": 2,
    
    "curly": [2, "multi-line"],
    "quotes": [2, "single"],
    "eqeqeq": [2, "smart"],
    "new-cap": 2,
    "semi": 0
  }
}